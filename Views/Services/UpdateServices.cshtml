@model PortfolyoProjectNight_2.Models.Service
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="alert alert-success">Hizmet Güncelleme</h2>

<form method="post">
    @Html.HiddenFor(x=>x.ServiceId)
    <label>Hizmet Adı</label>
    @Html.TextAreaFor(x=>x.Title,new {@class="form-control"})
<br />
    <label>İcon</label>
    @Html.TextAreaFor(x=>x.İcon,new {@class="form-control"})
<br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new {@class="form-control"})
<br />

<button class="btn btn-success">Güncelle</button>

</form>

