@model PortfolyoProjectNight_2.Models.Skill
@{
    ViewBag.Title = "CreateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h4 class="alert alert-success">Yetenek Listesi ve İşlemleri</h4>
<br />
<br />

<form method="post">
    @Html.HiddenFor(x=>x.SkillId, new {@class="form-control"})
    <label>Yetenek Başlığı</label>
    <input type="text" name="SkillName" class="form-control" required/>
    <br />
    <label>Yetenek Değeri</label>
    <input type="number" name="Rate" class="form-control" required min="0" max="100" />
    <br />
    <label>Yetenek ikon yolu</label>
    <input type="text" name="Icon" class="form-control" />
    <br />
   
    <Button class="btn btn-info">Yeteneği Ekle</Button>

</form>
